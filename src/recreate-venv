if [ "$1" = "" ];then
	VE=$(ls -d venv-* 2> /dev/null)
else
	VE="venv-$1"
	SUFFIX=$1
fi

if [ "${VE}" = "" ]; then 
	if [ "${SUFFIX}" = "" ];then
		echo -e "\nNo virtual environment found use create-venv to create one\n"
	else
		create-venv ${SUFFIX}
	fi
	exit
fi

SUFFIX="$(echo ${VE}|cut -d- -f2)"

echo "Recreating ${VE}"

rm -rf ${VE}
create-venv ${SUFFIX}
