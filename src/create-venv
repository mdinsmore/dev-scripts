#!/bin/bash
if [ -z "$1" ]; then
	echo -e "\nUsage:\n"
	echo -e "\t`basename $0` <venv> [--no-ipdb|--production]\n"
	echo -e "\nWhere:\n"
	echo -e "\tvenv - is the name of the <name of virtual environment (exluding"
	echo -e "\t       the 'venv-' prefix)>\n"
	echo -e "\t--no-ipdb - don't install ipdb and black\n"
	echo -e "\t--production - use the production requirements\n"

	exit 1
fi

if [ "`which deactivate`" != "" ];then
	deactivate
fi

VENV="venv-$1"

if [ -d "${VENV}" ]; then
	echo "The virtual environment ${VENV} already exists"
	exit
else
	echo -e "Create virtual environment: ${VENV}"
	echo -e "---------------------------"
fi

INSTALL_IPDB=true

create-dot-env

if [ "$2" != "" ];then
	if [ "$2" = "--production" ]; then
		REQUIREMENTS="requirements/production.txt"
	fi
	if [ "$2" = "--no-ipdb" ]; then
		INSTALL_IPDB=
	fi
fi

if [ "$REQUIREMENTS" = "" ]; then
	REQUIREMENTS=requirements/local.txt
	if [ ! -f requirements/local.txt -a -f requirements.txt ]; then
		REQUIREMENTS=requirements.txt
	fi
fi

python3 -m venv ${VENV} && \
source ${VENV}/bin/activate && \
pip install --upgrade wheel pip && \
pip install -r ${REQUIREMENTS}
if [ $INSTALL_IPDB ]; then
    echo "INSTALLING IPDB AND BLACK $INSTALL_IPDB\n"
	pip install ipdb black
fi

if [ $? = 0 ];then
	echo -e "\n*************************************************"
	echo -e   "* Now run cd . to activate your new environment *"
	echo -e   "*************************************************\n"
else
	echo -e "\n********************************************************************************"
	echo -e   "* An error occurred please fix this issue and recreate the virtual environment *"
	echo -e   "********************************************************************************\n"
fi

